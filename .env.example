# YOUTUBE ANALYTICS PIPELINE - ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your actual values
# Command: cp .env.example .env

# YOUTUBE API
YOUTUBE_API_KEY=your_youtube_api_key_here

# GOOGLE CLOUD PLATFORM (BigQuery)
GCP_PROJECT_ID=your_gcp_project_id
BQ_DATASET_ID=raw_yt
GOOGLE_APPLICATION_CREDENTIALS=credentials/your-service-account-key.json

# POSTGRESQL (Metadata storage for Prefect)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=prefect
PG_USER=prefect
PG_PASSWORD=your_password_here

# Connection string format (alternative)
# PG_CONN_STR=postgresql://prefect:your_password_here@localhost:5432/prefect

# PGADMIN (Optional - for database management)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=change_this_password

# REDIS (Message broker for Prefect)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PREFECT SERVER
PREFECT_SERVER_PORT=4200
PREFECT_API_URL=http://prefect-server:4200/api

# For local development (outside Docker)
# PREFECT_API_URL=http://localhost:4200/api

# STREAMLIT DASHBOARD (Optional)
STREAMLIT_PORT=8501

# DBT CONFIGURATION
DBT_PROFILES_DIR=dbt_project
DBT_TARGET=dev

# LOGGING & MONITORING
LOG_LEVEL=INFO
ENABLE_NOTIFICATIONS=false

# CRAWLER SETTINGS (Optional - Override config/channels.yml)
MAX_VIDEOS_PER_CHANNEL=50
MAX_COMMENTS_PER_VIDEO=100
API_DELAY_SECONDS=0.5
